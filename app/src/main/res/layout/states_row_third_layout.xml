<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/thirdStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/thirdStateIcon2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thirdStateIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/thirdStateIcon3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/thirdStateIcon2"
        app:layout_constraintStart_toEndOf="@+id/thirdStateIcon2"
        app:layout_constraintTop_toTopOf="@+id/thirdStateIcon2" />

    <TextView
        android:id="@+id/thirdStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thirdStateIcon"
        app:layout_constraintTop_toTopOf="@+id/thirdStateIcon"
        tools:text="thirdStateLabel" />

    <TextView
        android:id="@+id/thirdStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/thirdStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thirdStateIcon"
        tools:text="thirdStateValue" />

</androidx.constraintlayout.widget.ConstraintLayout>