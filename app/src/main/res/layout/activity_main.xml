<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.MainActivity">

    <View
        android:id="@+id/networkStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/bluetoothStateIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/networkStateLabel"
        android:text="Network status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/networkStateIcon"
        app:layout_constraintTop_toTopOf="@+id/networkStateIcon"
        tools:text="networkStateLabel" />

    <TextView
        android:id="@+id/networkStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/networkStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/networkStateIcon"
        tools:text="networkStateValue" />

    <View
        android:id="@+id/gpsStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/airplaneModeStateIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothStateIcon" />

    <View
        android:id="@+id/bluetoothStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/gpsStateIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/networkStateIcon" />

    <TextView
        android:id="@+id/bluetoothStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bluetoothStateIcon"
        app:layout_constraintTop_toTopOf="@+id/bluetoothStateIcon"
        tools:text="bluetoothStateLabel" />

    <TextView
        android:id="@+id/bluetoothStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bluetoothStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bluetoothStateIcon"
        tools:text="bluetoothStateValue" />

    <TextView
        android:id="@+id/gpsStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/gpsStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gpsStateIcon"
        tools:text="gpsStateValue" />

    <TextView
        android:id="@+id/gpsStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gpsStateIcon"
        app:layout_constraintTop_toTopOf="@+id/gpsStateIcon"
        tools:text="gpsStateLabel" />

    <View
        android:id="@+id/airplaneModeStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpsStateIcon" />

    <TextView
        android:id="@+id/airplaneModeStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/airplaneModeStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/airplaneModeStateIcon"
        tools:text="airplaneModeStateValue" />

    <TextView
        android:id="@+id/airplaneModeStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/airplaneModeStateIcon"
        app:layout_constraintTop_toTopOf="@+id/airplaneModeStateIcon"
        tools:text="airplaneModeStateLabel" />

    <TextView
        android:id="@+id/mainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="mainLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>