<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/fourthStateIcon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fourthStateIcon2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fourthStateIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fourthStateIcon3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fourthStateIcon2"
        app:layout_constraintStart_toEndOf="@+id/fourthStateIcon2"
        app:layout_constraintTop_toTopOf="@+id/fourthStateIcon2" />

    <View
        android:id="@+id/fourthStateIcon4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fourthStateIcon3"
        app:layout_constraintStart_toEndOf="@+id/fourthStateIcon3"
        app:layout_constraintTop_toTopOf="@+id/fourthStateIcon3" />

    <TextView
        android:id="@+id/fourthStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/network_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fourthStateIcon"
        app:layout_constraintTop_toTopOf="@+id/fourthStateIcon"
        tools:text="fourthStateLabel" />

    <TextView
        android:id="@+id/fourthStateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fourthStateIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fourthStateIcon"
        tools:text="fourthStateValue" />

</androidx.constraintlayout.widget.ConstraintLayout>